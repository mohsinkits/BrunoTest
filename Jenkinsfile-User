pipeline {
  agent any
  stages {
    stage('verify installation') {
      steps {
        sh 'bru --version'
      }
    }
    stage('run all files in the collection') {
      steps {
        dir('User') {
          sh 'bru run'
        }
      }
    }
    stage('explicityly run get-usebruno-user-information') {
      steps {
        dir('User') {
          sh '''
            bru run GetUser.bru
          '''
        }
      }
    }
  }
}